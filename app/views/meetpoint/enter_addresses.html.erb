<div class="container">
  <div class="row">
    <div class="col-md-offset-1 col-md-10">

      <h1>MeetPoint</h1>

      <%if @missing_address_1 and @missing_address_2%>
      <div class="alert alert-danger"> Missing Address 1 and 2! </div>
      <%elsif @missing_address_1%>
      <div class="alert alert-danger"> Missing Address 1! </div>
      <%elsif @missing_address_2%>
      <div class="alert alert-danger"> Missing Address 2! </div>
      <%end%>

      <form class="form-horizontal" action="/your_meetpoint">
        <div class="form-group">
          <p>
            <label for="the_address_1">Where are you?</label>
            <input type="text" class="form-control" name="user_address_1" id="the_address_1" placeholder="Address" value="<%=@address_1%>">
          </p>
          <p>
            <label for="the_address_2">Where is your friend?</label>
            <input type="text" class="form-control" name="user_address_2" id="the_address_2" placeholder="Address" value="<%=@address_2%>">
          </p>
          <p>
            <label for="category">What are you looking for?</label>
            <input type="text" class="form-control" name="category" id="the_category" placeholder="Category (ex. food, drinks, coffee, etc.)" value="<%=@address_2%>">
          </p>
        </div>

        <p><button>What's our MeetPoint?</button></p>
      </form>
    </div>
  </div>
</div>
